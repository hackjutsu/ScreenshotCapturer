{
  "manifest_version": 3,
  "name": "Screenshot Extension",
  "version": "1.0",
  "description": "Take screenshots of visible content or full webpages",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://*/screenshot-viewer.html"],
      "js": ["screenshot-viewer.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["screenshot-viewer.html", "screenshot-viewer.js"],
      "matches": ["<all_urls>"]
    }
  ]
}